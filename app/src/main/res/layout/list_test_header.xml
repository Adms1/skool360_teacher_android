<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        android:background="@drawable/list_line"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="5">

        <TextView
            android:id="@+id/srno_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:padding="@dimen/_5sdp"
            android:text="@string/date"
            android:textAlignment="center"
            android:textColor="@color/scheduleheadertextcolor"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/test_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="0.60"
            android:padding="@dimen/_5sdp"
            android:text="@string/testname"
            android:textAlignment="center"
            android:textColor="@color/scheduleheadertextcolor"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/grade_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1.4"
            android:padding="@dimen/_5sdp"
            android:text="@string/grade"
            android:textAlignment="center"
            android:textColor="@color/scheduleheadertextcolor"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/subject_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="2.1"
            android:padding="@dimen/_5sdp"
            android:text="@string/subject"
            android:textAlignment="center"
            android:textColor="@color/scheduleheadertextcolor"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/edit_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:text="@string/edit"
            android:textAlignment="center"
            android:textColor="@color/scheduleheadertextcolor"
            android:textSize="@dimen/_11sdp" />

    </LinearLayout>
</LinearLayout>