<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    android:paddingTop="@dimen/_5sdp"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/standard_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_10sdp"
        android:weightSum="3"
        android:visibility="gone">

        <TextView
            android:id="@+id/standard_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginLeft="@dimen/_1sdp"
            android:padding="@dimen/_5sdp"
            android:text="Grade"
            android:textAlignment="textStart"
            android:textColor="@color/linear_color"
            android:textSize="@dimen/_11sdp"
            android:layout_weight="0.6" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginLeft="@dimen/_1sdp"
            android:padding="@dimen/_5sdp"
            android:text=":"
            android:textAlignment="center"
            android:textColor="@color/linear_color"
            android:textSize="@dimen/_11sdp"
            android:layout_weight="0.2" />
        <LinearLayout
            android:id="@+id/standard_checkbox_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:weightSum="3"
        android:layout_marginLeft="@dimen/_10sdp"
        android:visibility="gone">

        <TextView
            android:id="@+id/class_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_weight="0.6"
            android:padding="@dimen/_5sdp"
            android:text="Section"
            android:textAlignment="textStart"
            android:textColor="@color/linear_color"
            android:textSize="@dimen/_11sdp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginLeft="@dimen/_1sdp"
            android:padding="@dimen/_5sdp"
            android:text=":"
            android:textAlignment="center"
            android:textColor="@color/linear_color"
            android:textSize="@dimen/_11sdp"
            android:layout_weight="0.2" />
        <LinearLayout
            android:id="@+id/class_checkbox_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/studentassignesubject_list_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_1sdp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/studentassignesubject_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_3sdp"
            android:descendantFocusability="afterDescendants"
            android:divider="@color/gray"
            android:dividerHeight="1dp"
            android:paddingBottom="@dimen/_20sdp"
            android:scrollbars="none" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:layout_marginTop="-85dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/insert_subject_img"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/_130sdp"
            android:src="@drawable/wright"
            android:visibility="gone"
            android:alpha="0.8"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtNoRecords"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_below="@+id/date_rel"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_centerInParent="true"
        android:background="@drawable/norecordfound"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/_11sdp"
        android:textStyle="bold"
        android:visibility="gone" />

</LinearLayout>