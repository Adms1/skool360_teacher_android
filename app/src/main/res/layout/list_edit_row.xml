<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_5sdp"
    android:background="@android:color/transparent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        card_view:cardBackgroundColor="@color/bg_color"
        card_view:cardCornerRadius="@dimen/_10sdp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:id="@+id/main_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_280sdp"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/edit_test_txt_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="0.7"
            android:padding="@dimen/_3sdp"
            android:text="Test"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="0.2"
            android:padding="@dimen/_3sdp"
            android:text=":"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/edit_test_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1.9"
            android:gravity="left|center"
            android:maxLines="2"
            android:padding="@dimen/_3sdp"
            android:text="hi"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/edit_test_date_txt_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="0.7"
            android:padding="@dimen/_3sdp"
            android:text="Test Date"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="0.2"
            android:padding="@dimen/_3sdp"
            android:text=":"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/edit_test_date_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_weight="1"
            android:background="@drawable/calendar_line"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:text="Test Date :"
            android:textColor="@color/textblack"
            android:textSize="@dimen/_9sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/edit_test_grade_txt_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="0.7"
            android:padding="@dimen/_3sdp"
            android:text="Grade"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="0.2"
            android:padding="@dimen/_3sdp"
            android:text=":"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/edit_test_grade_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1.9"
            android:gravity="left|center"
            android:maxLines="2"
            android:padding="@dimen/_3sdp"
            android:text="hi"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/edit_test_subject_txt_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="0.7"
            android:padding="@dimen/_3sdp"
            android:text="Subject"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="0.2"
            android:padding="@dimen/_3sdp"
            android:text=":"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/edit_test_subject_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1.9"
            android:gravity="left|center"
            android:maxLines="2"
            android:padding="@dimen/_3sdp"
            android:text="hi"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listData"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:scrollbars="none"></ListView>

    <Button
        android:id="@+id/Edit_btn"
        android:layout_width="@dimen/_85sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/linear_msg"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/round_button"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/editTextcolor"
        android:textSize="@dimen/_11sdp" />
    </LinearLayout>
    <Button
        android:id="@+id/close_btn"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignRight="@+id/main_linear"
        android:layout_gravity="right"
        android:background="@drawable/close_cancel"
        android:text="X"
        android:textColor="@color/editTextcolor"
        android:textSize="@dimen/_14sdp"  />
    </android.support.v7.widget.CardView>
</RelativeLayout>