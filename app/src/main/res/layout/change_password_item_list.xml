<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:tag="cards main container">

        <LinearLayout
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/editTextcolor"
            android:orientation="vertical">


            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                card_view:cardBackgroundColor="@color/editTextcolor"
                card_view:cardCornerRadius="@dimen/_10sdp"
                card_view:cardElevation="3dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_weight="1.3"
                            android:text="Change Password"
                            android:textColor="@color/linear_color"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/change_btn"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_weight=".7"
                            android:background="@drawable/round_button"
                            android:text="CHANGE"
                            android:textColor="@color/editTextcolor"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/txtUserName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_7sdp"
                            android:text=""
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/textblack"
                            android:gravity="center_vertical"
                            android:textStyle="normal"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="User Name"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_7sdp"
                            android:textSize="@dimen/_9sdp"
                            android:textColor="@color/textblack"
                            android:gravity="center_vertical"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/password_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"

                        android:orientation="vertical"
                        android:visibility="visible">


                        <TextView
                            android:id="@+id/txtcurrentPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_7sdp"
                            android:inputType="textPassword"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/textblack"
                            android:gravity="center_vertical"
                            android:textStyle="normal"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_7sdp"
                            android:text="Password"
                            android:gravity="center_vertical"
                            android:textColor="@color/textblack"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/current_password_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <EditText
                            android:id="@+id/edtcurrentPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textSize="@dimen/_11sdp"
                            android:paddingLeft="@dimen/_7sdp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_7sdp"
                            android:text="Current Password"
                            android:textColor="@color/textblack"
                            android:textSize="@dimen/_9sdp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/new_password_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:orientation="vertical"
                        android:visibility="gone">



                        <EditText
                            android:id="@+id/edtnewPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textSize="@dimen/_11sdp"
                            android:paddingLeft="@dimen/_7sdp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_7sdp"
                            android:text="New Password"
                            android:textColor="@color/textblack"
                            android:textSize="@dimen/_9sdp"

                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/confirm_password_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <EditText
                            android:id="@+id/edtconfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textSize="@dimen/_11sdp"
                            android:paddingLeft="@dimen/_7sdp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_7sdp"
                            android:text="Confirm Password"

                            android:textColor="@color/textblack"
                            android:textSize="@dimen/_9sdp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <Button
                        android:id="@+id/btnUpdate"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/round_button"
                        android:padding="1dp"
                        android:text="Update Password"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="normal"
                        android:visibility="gone" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</layout>