<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/_15sdp">

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_1sdp"
        android:visibility="visible"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:weightSum="3"
        android:background="@drawable/list_line">

        <TextView
            android:id="@+id/lecuture_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtSubject"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/txtSubject"
            android:layout_toLeftOf="@+id/txtSubject"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Lecture "
            android:layout_marginLeft="@dimen/_1sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:gravity="center"
            android:textColor="@color/scheduleheadertextcolor"
            android:textSize="@dimen/_10sdp"  />

        <TextView
            android:id="@+id/subject_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="Subject"
            android:paddingLeft="@dimen/_8sdp"
            android:textAlignment="center"
            android:textColor="@color/scheduleheadertextcolor"
            android:textSize="@dimen/_10sdp"  />

        <TextView
            android:id="@+id/class_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Class"
            android:paddingLeft="1dp"
            android:textAlignment="center"
            android:textColor="@color/scheduleheadertextcolor"
            android:textSize="@dimen/_10sdp" />
        <TextView
            android:id="@+id/txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_5sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:textAlignment="textEnd"
            android:textColor="@color/scheduleheadertextcolor"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>
</LinearLayout>