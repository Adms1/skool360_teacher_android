<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_1sdp"
        android:orientation="horizontal"
        android:background="@drawable/list_line"
        android:layout_margin="@dimen/_2sdp">

        <TextView
            android:id="@+id/txtSubject_header"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="0.41"
            android:gravity="left"
            android:padding="@dimen/_2sdp"
            android:text="Subject"
            android:textAlignment="textStart"
            android:textColor="@color/orange"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/txtMarks_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtSubject"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/txtSubject"
            android:layout_toRightOf="@+id/txtSubject"
            android:layout_weight="1.04"
            android:gravity="left"
            android:padding="@dimen/_2sdp"
            android:textAlignment="textStart"
            android:text="Marks"
            android:textColor="@color/orange"
            android:textSize="@dimen/_9sdp" />
    </LinearLayout>
</RelativeLayout>