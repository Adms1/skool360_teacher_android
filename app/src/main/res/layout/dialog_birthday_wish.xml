<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:layout_margin="@dimen/_20sdp"
        android:background="@color/mdtp_white"
        android:orientation="vertical">

        <anandniketan.com.skool360teacher.Utility.GifView
            android:id="@+id/gifview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:layout_gravity="center" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_360sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_label_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="cursive"
                    android:textStyle="bold"
                    android:text="from"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/brush_textColorPurple"
                    android:textSize="23sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_username"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_label_from"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:fontFamily="cursive"
                    android:text="@string/UserName"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/brush_textColorPink"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/close_cancel"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/_19sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="X"
        android:textColor="@color/mdtp_white"
        android:layout_alignParentRight="true" />


</RelativeLayout>